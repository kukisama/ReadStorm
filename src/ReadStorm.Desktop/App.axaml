<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ReadStorm.Desktop.App"
             xmlns:local="using:ReadStorm.Desktop"
             xmlns:semi="using:Semi.Avalonia"
             RequestedThemeVariant="Light">

    <Application.Resources>
        <!-- 与 Android 对齐的 Material Design Icons 字体（用于 GitHub 等品牌图标） -->
        <FontFamily x:Key="MdiFont">avares://ReadStorm.Desktop/Assets/Fonts/materialdesignicons-webfont.ttf#Material Design Icons</FontFamily>
    </Application.Resources>

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <semi:SemiTheme Locale="zh-cn" />
        <StyleInclude Source="avares://ReadStorm.Desktop/Styles/ModernTheme.axaml" />
    </Application.Styles>
</Application>